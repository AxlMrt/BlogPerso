{
	"compilerOptions": {
		"sourceMap": true,
		"target": "es2018",
		"module": "commonjs",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"outDir": "dist",
		"baseUrl": "./src"
	},
	"include": ["src", "src/**/*.ts"],
	"exclude": ["node_modules"],
	"typeRoots": ["index.d.ts"]
}
